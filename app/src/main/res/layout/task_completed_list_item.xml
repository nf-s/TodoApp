<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="@dimen/task_list_item"
                android:layout_width="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/task_list_item"
    android:gravity="center_vertical"
    android:background="@color/task_completed_list_background">

    <TextView
        android:id="@+id/task_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/text_margin"
        android:textColor="@color/task_completed_text"
        />

    <TextView
        android:id="@+id/task_due_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/text_margin"
        />

    <TextView
        android:id="@+id/task_options_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/text_margin"
        android:drawableRight="@drawable/ic_more_vert_black_18dp"
        android:textSize="16sp"
        android:textAppearance="?android:textAppearanceLarge"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/task_list_item"
        android:gravity="center_vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="@color/dark_divider"/>
    </LinearLayout>

</RelativeLayout>