<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/divider"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/task_edit_goal_img"
                android:src="@drawable/ic_flag_black_24dp"
                android:theme="@style/AppTheme.ItemEditImage" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.ItemEditTextView"
                android:id="@+id/task_edit_goal_text"
                android:inputType="textNoSuggestions"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@android:color/transparent"
                android:hint="@string/task_edit_goal_hint"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/task_edit_duedate_img"
                android:src="@drawable/ic_date_range_black_24dp"
                android:theme="@style/AppTheme.ItemEditImage" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:theme="@style/AppTheme.ItemEditTextView"
                android:id="@+id/task_edit_dutedate_text"
                android:hint="@string/task_edit_date_hint"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/task_edit_duetime_img"
                android:src="@drawable/ic_access_time_black_24dp"
                android:theme="@style/AppTheme.ItemEditImage" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:theme="@style/AppTheme.ItemEditTextView"
                android:id="@+id/task_edit_duetime_text"
                android:hint="@string/task_edit_time_hint"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/task_edit_importance_img"
                android:src="@drawable/ic_warning_black_24dp"
                android:theme="@style/AppTheme.ItemEditImage" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.ItemEditTextView"
                android:id="@+id/task_edit_importance_text"
                android:inputType="number"
                android:hint="@string/task_edit_importance_hint"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/task_edit_urgent_img"
                android:src="@drawable/ic_timer_black_24dp"
                android:theme="@style/AppTheme.ItemEditImage" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.ItemEditTextView"
                android:id="@+id/task_edit_urgent_text"
                android:inputType="number"
                android:hint="@string/task_edit_urgency_hint"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/task_edit_notes_img"
            android:src="@drawable/ic_short_text_black_24dp"
            android:theme="@style/AppTheme.ItemEditImage" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.ItemEditTextView"
            android:id="@+id/task_edit_notes_text"
            android:inputType="textMultiLine"
            android:hint="@string/goal_edit_notes_hint"/>
    </LinearLayout>



    </LinearLayout>