<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:divider="@drawable/divider"
    android:showDividers="middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/goal_edit_colour_img"
                android:src="@drawable/ic_color_lens_black_24dp"
                android:theme="@style/AppTheme.ItemEditImage" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.ItemEditTextView"
                android:background="@android:color/transparent"
                android:id="@+id/goal_edit_colour_text"
                android:inputType="textNoSuggestions"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/goal_edit_colour_hint"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/goal_edit_notes_img"
                android:src="@drawable/ic_short_text_black_24dp"
                android:theme="@style/AppTheme.ItemEditImage" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.ItemEditTextView"
                android:id="@+id/goal_edit_notes_text"
                android:inputType="textMultiLine"
                android:hint="@string/goal_edit_notes_hint"/>
        </LinearLayout>

    </LinearLayout>
